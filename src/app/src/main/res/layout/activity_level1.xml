<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:id="@+id/layout1"
    android:background="@drawable/b2"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/fuel1"
        android:layout_width="60px"
        android:layout_height="90px"
        app:srcCompat="@drawable/fuel1"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="53dp" />


    <ImageView
        android:id="@+id/spaceCraft_1"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/sc3" />

    <ImageView
        android:id="@+id/planet2_1"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/e2"
        tools:layout_editor_absoluteX="100dp" />

    <ImageView
        android:id="@+id/planet1_1"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/p4" />


    <TextView
        android:id="@+id/timeTextView_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp" />

    <ProgressBar
        android:id="@+id/fuelBar_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="205dp"
        android:layout_height="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:progress="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/arrow_1"
        android:layout_width="19dp"
        android:layout_height="26dp"
        android:layout_marginBottom="264dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/arrow3" />

    <TextView
        android:id="@+id/levelCap1"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="         Level 1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dup1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="112dp"
        android:layout_marginStart="52dp"
        android:background="?android:attr/colorControlHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/up" />

    <ImageButton
        android:id="@+id/ddown1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="52dp"
        android:background="?android:attr/colorControlHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/down" />

    <ImageButton
        android:id="@+id/dleft1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="4dp"
        android:adjustViewBounds="false"
        android:background="?android:attr/colorControlHighlight"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/left" />

    <ImageButton
        android:id="@+id/dright1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="100dp"
        android:background="?android:attr/colorControlHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/right" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="?android:attr/colorControlHighlight"
        android:onClick="pause"
        android:visibility="visible"
        app:srcCompat="@drawable/pause3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="4dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/fire"
        android:src="@drawable/fire"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="247dp" />

    <ImageView
        android:id="@+id/tleft1"
        android:layout_width="40px"
        android:layout_height="40px"
        app:srcCompat="@drawable/fleft"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="412dp" />

    <ImageView
        android:id="@+id/tright1"
        android:layout_width="40px"
        android:layout_height="40px"
        app:srcCompat="@drawable/fright"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="223dp" />

    <ImageView
        android:id="@+id/tup1"
        android:layout_width="40px"
        android:layout_height="40px"
        app:srcCompat="@drawable/fup"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="384dp" />

    <ImageView
        android:id="@+id/tdown1"
        android:layout_width="40px"
        android:layout_height="40px"
        app:srcCompat="@drawable/fdown"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="237dp" />

    <ImageView
        android:id="@+id/qb1"
        android:layout_width="100px"
        android:layout_height="100px"
        app:srcCompat="@drawable/qb2"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="98dp" />


</android.support.constraint.ConstraintLayout>